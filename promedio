#include <stdio.h>

int main() {
    // Declaración de variables para notas
    double nota1, nota2, nota3, nota4;

    // Ingreso de notas para cada estudiante
    printf("Ingrese la nota del estudiante 1: ");
    scanf("%lf", &nota1);

    printf("Ingrese la nota del estudiante 2: ");
    scanf("%lf", &nota2);

    printf("Ingrese la nota del estudiante 3: ");
    scanf("%lf", &nota3);

    printf("Ingrese la nota del estudiante 4: ");
    scanf("%lf", &nota4);

    // Cálculo del promedio simple
    double promedio = (nota1 + nota2 + nota3 + nota4) / 4;

    // Imprimir el resultado
    printf("El promedio de las notas es: %.2lf\n", promedio);

    return 0;
}
